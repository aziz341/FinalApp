<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.first_screen.FirstFragment">

    <TextView
        android:id="@+id/txt_good_food"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/syne_bold"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@color/blue"
        android:text="Good Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/syne_bold"
        android:text="Deliciously Simple."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_good_food"
        app:layout_constraintEnd_toEndOf="@id/txt_good_food"
        app:layout_constraintStart_toStartOf="@id/txt_good_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start_cooking"
        android:textAllCaps="false"
        android:paddingHorizontal="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:text="Start Cooking"
        android:fontFamily="@font/syne_bold"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>