<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginBottom="26dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/img"
            android:src="@drawable/img_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    
    
    <TextView
        android:id="@+id/txt_userName"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:text="New Recipes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_name"
        android:fontFamily="@font/syne_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/txt_userName"
        app:layout_constraintStart_toStartOf="@id/txt_userName"
        android:text="Cajun Checkpea Burger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txt_userName"
        app:layout_constraintEnd_toEndOf="@id/txt_name"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/txt_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/star_1"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ImageView
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/star_1"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:src="@drawable/star_1"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/star_1"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:src="@drawable/star_1"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>